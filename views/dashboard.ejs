<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="css/dashboard.css" />
  <!-- Chart.js CDN for rendering charts -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <nav class="sidebar">
      <h2>Admin Panel</h2>
      <button onclick="showSection('users')">Users</button>
      <button onclick="showSection('menu')">Menu</button>
      <button onclick="showSection('transactions')">Transactions</button>
      <button onclick="showSection('sales')">Sales Trend</button>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <h1>Dashboard Overview</h1>
      
      <!-- Stats Cards -->
      <div class="stats-container">
        <div class="stat-card">
          <h3>Total Users</h3>
          <p id="total-users">0</p>
        </div>
        <div class="stat-card">
          <h3>Today's Sales</h3>
          <p id="today-sales">$0.00</p>
        </div>
      </div>

      <!-- Users Table -->
      <section id="users-section" class="content-section">
        <h2>User Management</h2>
        <table class="data-table" id="users-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </section>

      <!-- Menu Table -->
      <section id="menu-section" class="content-section" style="display: none;">
        <h2>Menu Management</h2>
        <table class="data-table" id="menu-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Item</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </section>

      <!-- Transactions Section (Placeholder) -->
      <section id="transactions-section" class="content-section" style="display: none;">
        <h2>Transactions</h2>
        <p>Transactions data goes here...</p>
      </section>

      <!-- Sales Trend Chart Section -->
      <section id="sales-section" class="content-section" style="display: none;">
        <h2>Sales Trend Over Time</h2>
        <canvas id="salesChart" width="400" height="200"></canvas>
      </section>
    </div>
  </div>
  
  <script src="../scripts/dashboard.js"></script>
</body>
</html>
