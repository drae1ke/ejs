<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>University Cafeteria System log in</title>
  <link rel="stylesheet" href="css/sign in.css">
  <link rel="shortcut icon" href="../img/favicon.png">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <!-- Hero Section -->
 
  <!-- Auth Section -->
  <section class="auth-section">
    <div class="auth-tabs">
      <button class="auth-tab active" onclick="switchForm('login')">Login</button>
      <button class="auth-tab" onclick="switchForm('signup')">Create Account</button>
    </div>

    <!-- Login Form -->
    <form id="login-form" class="auth-form active" 
    action="sign in" method="POST">
      <h2>Login</h2>
      <div class="form-group">
        <label>Student ID</label>
        <input type="text" required>
      </div>
      <div class="form-group password-toggle">
        <label>Password</label>
        <input type="password" id="login-password" required spellcheck="false">
        <i class="toggle-password fas fa-eye" onclick="togglePassword('login-password')"></i>
      </div>
      <button type="submit">Login</button>
      <div class="form-footer">
        <a  onclick="switchForm('signup')">Don't have an account? SIGN UP</a><br>
        <a href="e-wallet.html" onclick="switchForm('forgot')"> Forgot Password?</a>
      </div>
    </form>

    <!-- Forgot Password Form -->
    <form id="forgot-form" class="auth-form">
      <h2>Forgot Password</h2>
      <div class="form-group">
        <label>Student ID</label>
        <input type="text" required>
      </div>
      <button type="submit">Reset Password</button>
    </form> <!-- Added closing tag for forgot-form -->

    <!-- Signup Form -->
    <form id="signup-form" class="auth-form" action="sign up" method="POST">
      <h2>Create Account</h2>
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" required spellcheck="false">
      </div>
      <div class="form-group">
        <label>Student ID</label>
        <input type="text" required>
      </div>
      <div class="form-group">
        <label>Email</label> <!-- Added email label -->
        <input type="email" id="signup-email" required> <!-- Added email input -->
      </div>
      <div class="form-group password-toggle">
        <label>Password</label>
        <input type="password" id="signup-password" required>
        <i class="toggle-password fas fa-eye" onclick="togglePassword('signup-password')"></i>
      </div>
      <div class="form-group password-toggle">
        <label>Confirm Password</label>
        <input type="password" id="confirm-password" required>
        <i class="toggle-password fas fa-eye" onclick="togglePassword('confirm-password')"></i>
      </div>
      <button type="submit">Create Account</button>
      <div class="form-footer">
        <a onclick="switchForm('login')">Already have an account? LOGIN</a>
      </div>
    </form>
  </section>
  <footer>
    Copyright .2025 All Rights Reserved
  </footer>

  

  <script src="scripts/sign in.js"></script>
</body>
</html>